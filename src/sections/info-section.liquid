<section class="section section--secondary section--light section--xlarge">
  {% if section.settings.background %}
    <div
      class="section__background"
      style="background-image: url({{ section.settings.background | img_url: '1920x' }});"
    ></div>
  {% endif %}

  <div class="section__container container container--md wrapper">
    <div class="section__header">
      <h3 class="section__heading">{{ section.settings.heading }}</h3>
    </div>

    <div class="section__content section__content--large">
      <p>{{ section.settings.paragraph }}</p>

      <ul class="section__ctas list list--horizontal list--center">
        <li class="list__item">
          <a
            href="{{ section.settings.cta1_target }}"
            class="button button--large button--primary"
          >{{ section.settings.cta1_label }}</a>
        </li>

        <li class="list__item">
          <a
            href="{{ section.settings.cta2_target }}"
            class="button button--large"
          >{{ section.settings.cta2_label }}</a>
        </li>
      </ul>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Info section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Heading"
      },
      {
        "type": "text",
        "id": "paragraph",
        "label": "Paragraph",
        "default": "Paragraph"
      },
      {
        "type": "text",
        "id": "cta1_label",
        "label": "CTA1 Label",
      },
      {
        "type": "text",
        "id": "cta1_target",
        "label": "CTA1 Target",
      },
      {
        "type": "text",
        "id": "cta2_label",
        "label": "CTA2 Label",
      },
      {
        "type": "text",
        "id": "cta2_target",
        "label": "CTA2 Target",
      }
    ]
  }
{% endschema %}
