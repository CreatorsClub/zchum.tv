<section
  class="hero"
  style="background-image: url({{ section.settings.background }});"
>
  <div class="container wrapper">
    <div class="hero__content">
      <h1 class="hero__heading">{{ section.settings.heading }}</h1>

      <h2 class="hero__subheading">{{ section.settings.subheading }}</h2>

      <div class="hero__cta-container">
        <div class="hero__cta">
          <a
            href="{{ section.settings.cta-href }}"
            class="button button--primary"
          >{{ section.settings.cta-label }}</a>
        </div>
      </div>
    </div>
  </div>
</section>
