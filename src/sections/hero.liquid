{% schema %}
  {
    "name": "Hero",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Hello!"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "default": "Hello!"
      },
      {
        "type": "image_picker",
        "id": "background",
        "label": "Hero background"
      },
      {
        "type": "text",
        "id": "cta-label",
        "label": "CTA button label"
      },
      {
        "type": "url",
        "id": "cta-href",
        "label": "CTA button href"
      }
    ]
  }
{% endschema %}
